@page "/"
@using System.Timers
@inject IJSRuntime JS


@{

    using Stream fileStream = FileSystem.Current.OpenAppPackageFileAsync("videoList.txt").Result;
    using StreamReader reader = new StreamReader(fileStream);
    var videoList = reader.ReadToEndAsync().Result;
    Videos=videoList.Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries).ToList();
}
<div style="text-align:center">
    
<video controls autoplay style="height:200pt;" id="mainVideo" @onended="NextVideo" poster="videos+thumbnails/@(Videos[0]).png"><source src="videos+thumbnails/@(Videos[0]).mp4" id="mainSource" type="video/mp4"  /></video>
</div>
<div>x
    <div class="splide" role="group">
    <div class="splide__track">
        <ul class="splide__list">
                @{
                    int i = 0;
                    foreach (var video in Videos)
                        {
                            <li  class="splide__slide" id="slide-@(i++)"> 
                            <img src="videos+thumbnails/@(video).png" style="width:100%; height:100%; object-fit:cover;"/>
                            </li>
                        }
            }
        </ul>
    </div>
</div>
</div>


@code {
   
    List<string> Videos = new();
    
    protected override async void OnAfterRender(bool firstRender)
    {

        if (firstRender)
        {
            await JS.InvokeVoidAsync("addSplide",Videos);
     
        }
    }


    protected  async void NextVideo()
    {
         await JS.InvokeVoidAsync("playNext",Videos);
     

    }

    
  }
